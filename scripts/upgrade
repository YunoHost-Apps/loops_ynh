#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# STOP SYSTEMD SERVICE
#=================================================
ynh_script_progression "Stopping $app's systemd service..."

ynh_systemctl --service="$app" --action="stop"

#=================================================
# ENSURE DOWNWARD COMPATIBILITY
#=================================================
ynh_script_progression "Ensuring downward compatibility..."

ynh_app_setting_set_default --key=app_key --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=APP_KEY)"
ynh_app_setting_set_default --key=mail_mailer --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_MAILER)"
ynh_app_setting_set_default --key=smtp_host --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_HOST)"
ynh_app_setting_set_default --key=smtp_port --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_PORT)"
ynh_app_setting_set_default --key=smtp_username --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_USERNAME)"
ynh_app_setting_set_default --key=smtp_password --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_PASSWORD)"
ynh_app_setting_set_default --key=smtp_encryption --value="tls"
ynh_app_setting_set_default --key=smtp_from --value="$(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_FROM_ADDRESS)"
if [ $(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_MAILER) = "mailgun" ]
then
    mailgun_domain=$(grep ^MAILGUN_DOMAIN $install_dir/.env)
    mailgun_secret=$(grep ^MAILGUN_SECRET $install_dir/.env)
elif [ $(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_MAILER) = "postmark" ]
then
    postmark_token=$(grep ^POSTMARK_TOKEN $install_dir/.env)
elif [ $(ynh_read_var_in_file --file=$install_dir/.env --key=MAIL_MAILER) = "resend" ]
then
    resend_key=$(grep ^RESEND_KEY $install_dir/.env)
fi
ynh_app_setting_set_default --key=php_upload_max_filesize --value=100M
ynh_app_setting_set_default --key=php_post_max_size --value=100M
ynh_app_setting_set_default --key=php_max_file_uploads --value=100M
ynh_app_setting_set_default --key=php_max_execution_time --value=300
ynh_app_setting_set_default --key=php_memory_limit --value=512M
if [ $s3_path_style -eq 1 ]
then
    s3_path_style_string="true"
else
    s3_path_style_string="false"
fi
ynh_app_setting_set_default --key=s3_path_style_string --value=$s3_path_style_string

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Upgrading source files..."

ynh_setup_source --dest_dir="$install_dir" --keep=".env"

#=================================================
# COMPOSER
#=================================================
ynh_script_progression "Pulling in external libraries with Composer..."

ynh_composer_exec install --no-dev --optimize-autoloader

#=================================================
# INSTALL NODE DEPENDENCIES
#=================================================
ynh_script_progression "Install Node dependencies..."

pushd "$install_dir"
    ynh_hide_warnings ynh_exec_as_app npm ci
    ynh_hide_warnings ynh_exec_as_app npm run build
popd

chown -R $app:www-data $install_dir

#=================================================
# CHECK FOR REDISBLOOM INSTALL 
#=================================================
if version_control; then
    ynh_print_info "YunoHost 13 detected. Checking for RedisBloom."
    redisbloom_check_for_install
else
    ynh_print_info "YunoHost < 13 detected. Skipping RedisBloom installation."
fi

#=================================================
# RUN MIGRATIONS
#=================================================
ynh_script_progression "Running migrations..."

artisan="ynh_exec_as_app php$php_version artisan"

pushd "$install_dir"
    $artisan migrate --force
popd

ynh_script_progression "Clearing and rebuilding caches..."


pushd "$install_dir"
    $artisan queue:restart
    # Clear caches
    $artisan optimize:clear
    # Rebuild caches
    $artisan optimize
popd

# Generate Passport Keys
pushd "$install_dir"
    if [ ! -f storage/oauth-private.key ]
    then
        $artisan passport:keys
    fi
popd

#=================================================
# REAPPLY SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Upgrading system configurations related to $app..."

ynh_config_add_phpfpm

ynh_config_add_nginx

ynh_config_add_systemd

yunohost service add "$app" --description="Federated short video sharing" --log="/var/log/$app/$app.log"

ynh_config_add_logrotate

# ynh_config_add_fail2ban --logpath="/var/log/nginx/${domain}-error.log" --failregex="Regex to match into the log for a failed login"

# Set permissions
chown -R $app:www-data $install_dir
chmod -R 775 $install_dir/storage
chmod -R 775 $install_dir/bootstrap/cache
chmod 660 $install_dir/storage/oauth-p*

ynh_config_add --template="cron" --destination="/etc/cron.d/$app"

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service="$app" --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
